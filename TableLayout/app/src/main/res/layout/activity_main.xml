            android:layout_column="1"
            android:textAlignment="center"/>
    </TableRow>
    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:textAlignment="center">

        <TextView
            android:layout_height="wrap_content"
